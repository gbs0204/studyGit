<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ad.dao.ReplyMapper">

	<!-- 댓글 조회 -->
	<select id="readReplyList" resultType="replyDto">
    	SELECT RNO
    	     , CONTENT
    	     , WRITER
    	     , REGDATE
    	  FROM MP_REPLY
    	WHERE BNO = #{bno}
	</select>
	
	<insert id="insertReply" parameterType="replyDto">
	INSERT INTO MP_REPLY(
		BNO
		, RNO
		, CONTENT
		, WRITER
	) VALUES (    
	      #{bno}
		, MP_REPLY_SEQ.NEXTVAL
		, #{content}
		, #{writer}	
	)
	</insert>
	
	<!-- 댓글 수정 -->
	<update id="updateReply" parameterType="replyDto">
		UPDATE MP_REPLY SET CONTENT = #{content}
		WHERE RNO = #{rno}
	</update>

	<!-- 댓글 삭제 -->
	<delete id="deleteReply" parameterType="replyDto">
		DELETE FROM MP_REPLY
		WHERE RNO = #{rno}
	</delete>
	
	<!-- 선택된 댓글 조회 -->
	<select id="selectReyply" resultType="replyDto">
		SELECT
				BNO
			  , RNO
			  , CONTENT
			  , WRITER
			  , REGDATE
		  FROM MP_REPLY
		 WHERE RNO = #{rno}
	</select>
</mapper>